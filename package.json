{
  "name": "git-boi",
  "version": "1.1.0",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "Cedric Fromm",

  "build": {
    "appId": "com.cedric-fromm.git-boi",
    "productName": "Git Boi",
    "directories": {
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "index.js",
      "index.html",
      "preload.js",
      "styles.css",
      "package.json"
    ],
    "extraResources": [
    ],
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": ["AppImage", "deb"],
      "icon": "build"
    }
  },

  "license": "ISC",
  "description": "Electron Terminal for gitbash",
  "dependencies": {
    "node-pty": "^1.0.0",
    "ws": "^8.18.3",
    "xterm": "^5.3.0"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "electron-reload": "^2.0.0-alpha.1"

  }
}
